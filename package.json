{
  "name": "nevergreen",
  "version": "0.0.0",
  "versionName": "Dev Build",
  "versionColour": "#7E7E7E",
  "commitHash": "dev",
  "description": "A build monitor with attitude",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "main": "main.js",
  "scripts": {
    "build": "NODE_ENV=production browserify main.js | uglifyjs -cm > resources/public/bundle.js",
    "test": "jest",
    "sass": "node-sass src/scss/base.scss resources/public/main.css --source-map resources/public/main.css.map",
    "lint": "npm run lintJs && npm run lintCss",
    "lintJs": "eslint src/js/*.js src/js/**/*.js src/js/**/**/*.js test/js/*.js test/js/**/*.js test/js/**/**/*.js",
    "lintCss": "stylelint src/scss/*.scss src/scss/**/*.scss src/scss/**/**/*.scss --syntax scss",
    "watchJs": "watchify main.js -o resources/public/bundle.js -dv",
    "watchCss": "watch 'npm run sass' src/scss",
    "watchTest": "watch 'npm run test' src/js test/js",
    "watchLint": "watch 'npm run lint' src/js test/js src/scss",
    "fake-server": "node test/test-server"
  },
  "dependencies": {
    "clipboard": "1.5.12",
    "flux": "2.1.1",
    "jquery": "3.0.0",
    "localforage": "1.4.2",
    "lodash": "4.13.1",
    "moment": "2.13.0",
    "mousetrap": "1.6.0",
    "node-uuid": "1.4.7",
    "normalize.css": "4.1.1",
    "project-name-generator": "2.1.2",
    "react": "15.1.0",
    "react-dom": "15.1.0",
    "react-router": "2.4.1",
    "scale-text": "0.2.2",
    "semver": "5.1.0",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-eslint": "6.0.4",
    "babel-jest": "12.1.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.5.0",
    "babelify": "7.3.0",
    "basic-auth-connect": "1.0.0",
    "browserify": "13.0.1",
    "chromedriver": "2.19.0",
    "eslint": "2.12.0",
    "eslint-plugin-babel": "3.2.0",
    "eslint-plugin-react": "5.1.1",
    "express": "4.13.4",
    "jest-cli": "12.1.1",
    "node-sass": "3.7.0",
    "react-addons-test-utils": "15.1.0",
    "stylelint": "6.5.1",
    "stylelint-config-standard": "8.0.0",
    "uglify-js": "2.6.2",
    "watch": "0.18.0",
    "watchify": "3.7.0"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/fbjs",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-linked-state-mixin",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/lodash",
      "<rootDir>/test/js/jest"
    ],
    "testDirectoryName": "test/js",
    "testPathIgnorePatterns": [
      "node_modules",
      "jest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/build-canaries/nevergreen.git"
  },
  "author": "Build Canaries",
  "license": "EPL-1.0",
  "bugs": {
    "url": "https://github.com/build-canaries/nevergreen/issues"
  }
}
