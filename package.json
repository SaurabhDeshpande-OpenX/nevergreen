{
  "name": "nevergreen",
  "version": "0.1.0",
  "description": "A build monitor with attitude",
  "main": "karma.conf.js",
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "devDependencies": {
    "jshint": "2.5.10",
    "karma": "^0.12.25",
    "karma-browserify": "1.0.0",
    "karma-jasmine": "~0.2.2",
    "karma-phantomjs-launcher": "~0.1.4",
    "watch": "0.13.0"
  },
  "dependencies": {
    "browserify": "6.3.3",
    "jquery": "2.1.1"
  },
  "scripts": {
    "postinstall": "browserify -d ./src/js/config/*.js -o ./resources/public/main.js && browserify -d ./src/js/monitor/*.js ./src/js/config/config.js -o ./resources/public/monitor.js",
    "building": "watch 'npm install' src/js",
    "test": "./node_modules/karma/bin/karma start --singleRun",
    "testing": "./node_modules/karma/bin/karma start",
    "lint": "jshint src/js/*.js test/js/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/build-canaries/nevergreen.git"
  },
  "author": "Build Canaries",
  "license": "Eclipse Public License",
  "bugs": {
    "url": "https://github.com/build-canaries/nevergreen/issues"
  }
}
