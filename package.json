{
  "name": "nevergreen",
  "version": "0.0.0",
  "description": "A build monitor with attitude",
  "browserify": {
    "transform": [
      "babelify",
      "reactify"
    ]
  },
  "main": "main.js",
  "scripts": {
    "start": "ecstatic -p 8000 resources/public",
    "build": "NODE_ENV=production browserify main.js | uglifyjs -cm > resources/public/bundle.js",
    "dev": "npm run watch & npm run server-dev",
    "watch": "watchify main.js -o resources/public/bundle.js -dv",
    "server-dev": "node browser-sync.js",
    "test": "jest"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {
    "babel": "^5.6.23",
    "babel-eslint": "^3.1.23",
    "babelify": "^6.1.2",
    "browser-sync": "2.7.13",
    "browserify": "^10.2.6",
    "ecstatic": "~0.8.0",
    "react": "~0.13.3",
    "reactify": "^1.1.1",
    "tap": "1.0.5",
    "watchify": "^3.2.3",

    "jquery": "2.1.4",
    "react-router": "1.0.0",
    "localforage": "1.3.0",
    "lodash": "3.10.1",
    "validate.js": "^0.9.0",
    "promise": "7.0.4",
    "node-uuid": "1.4.7",
    "flux": "2.1.1",
    "scale-text": "0.2.2",
    "whatwg-fetch": "^0.10.1",
    "react-tools": "0.13.3"
  },
  "devDependencies": {
    "babel-jest": "*",
    "jest-cli": "*",

    "tape": "2.3.3",
    "uglify": "~0.1.5"
  },
  "jest": {
    "testRunner": "<rootDir>/node_modules/jest-cli/src/testRunners/jasmine/jasmine2.js",
    "setupEnvScriptFile": "<rootDir>/test/js/jest/setupEnv.js",
    "scriptPreprocessor": "<rootDir>/test/js/jest/jsxPreprocessor.js",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/lodash"
    ],
    "testDirectoryName": "test/js",
    "testPathIgnorePatterns": [
      "node_modules",
      "jest"
    ],
    "testFileExtensions": [
      "js",
      "jsx"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/build-canaries/nevergreen.git"
  },
  "author": "Build Canaries",
  "license": "EPL-1.0",
  "bugs": {
    "url": "https://github.com/build-canaries/nevergreen/issues"
  }
}
