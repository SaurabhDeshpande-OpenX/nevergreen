<configuration debug="true">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{"yyyy-MM-dd'T'HH:mm:ss.SSSZ"} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.eclipse.jetty.util.thread" level="info"/>
  <logger name="org.eclipse.jetty.http" level="info"/>
  <logger name="org.eclipse.jetty.server" level="info"/>
  <logger name="org.eclipse.jetty.io" level="info"/>
  <logger name="org.apache.http" level="info"/>
  <logger name="org.apache.http.headers" level="info"/>
  <logger name="org.apache.http.wire" level="info"/>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
